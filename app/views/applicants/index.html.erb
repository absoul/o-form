<%= render'shared/navbar'%>

<div class="container">
	<h1> 
		<span class="glyphicon glyphicon-th-list" aria-hidden="true"></span> 
		All Applicants
	</h1>
	
	<br><br>

	<table class="table table-hover  ">
		<tr class="active">
			<th>Name</th>
			<th>Position</th>
			<th>Availability</th>
			<th>Score</th>
			<th></th>
			

		</tr>

		<% @applicants.each do |applicant|%>
			<tr>
				<td> <strong> <%= link_to(applicant.name, applicant) %> <strong></td>
				<td> <%= applicant.position %> </td>  
				<td> <%= applicant.availability %> </td>
				<td> <strong> <%= applicant.score %> </strong> </td>
				<td> 
					<%= link_to("Delete", applicant, method: :delete, 
					data: {confirm:"Are you sure you want to delete this applicant?"}, class:"btn btn-primary btn-xs") %>  
				</td>
			</tr>
	<% end %>
	</table>
</div>